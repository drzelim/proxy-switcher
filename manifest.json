{
  "manifest_version": 3,
  "name": "Proxy Switcher",
  "version": "1.0",
  "description": "Redirects traffic through a proxy server.",
  "permissions": [
    "proxy",
    "storage",
    "activeTab"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "/icons/proxy_icon_16x16.png",
      "32": "/icons/proxy_icon_32x32.png",
      "48": "/icons/proxy_icon_48x48.png",
      "128": "/icons/proxy_icon_128x128.png"
    }
  }
}
